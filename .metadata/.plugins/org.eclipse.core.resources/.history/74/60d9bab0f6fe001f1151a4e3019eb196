spring:
  cloud:
    gateway:
      routes:
        - id: donor-service
          uri: lb://SERVICE-DONOR
          predicates:
            - Path=/Donor/**
          filters:
            - JwtGatewayFilter
        - id: user-service
          uri: lb://SERVICE-USER
          predicates:
            - Path=/User/**			
          filters:
            - JwtGatewayFilter
